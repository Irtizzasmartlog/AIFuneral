# Database (SQLite for local dev)
DATABASE_URL="file:./dev.db"

# NextAuth (demo auth)
NEXTAUTH_SECRET="your-secret-at-least-32-chars-long"
NEXTAUTH_URL="http://localhost:3000"

# API base URL for client requests. Leave empty for local (uses relative /api/...).
NEXT_PUBLIC_API_BASE_URL=

# Resend (email). If missing, emails are logged to console and stored in EmailLog (mock mode).
RESEND_API_KEY=""

# OpenAI (optional). If missing, AI agents use deterministic mock mode.
OPENAI_API_KEY=""

# Google Gemini (optional). If missing, intake chat uses deterministic mock mode.
GEMINI_API_KEY=
GEMINI_MODEL=GEMINI_MODEL=gemini-2.5-flash


# n8n webhook (optional). If set, intake chat forwards to this URL instead of Gemini.
N8N_WEBHOOK_URL=

# Google Maps (optional). If set, Nearby venues uses Geocoding + Places APIs. If missing, returns "Venue lookup is disabled".
GOOGLE_MAPS_API_KEY=
